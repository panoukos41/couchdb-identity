<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>AspNetCore.Identity.CouchDB</PackageId>
    <Authors>panoukos41</Authors>
    <PackageDescription>
      CouchDB identity store provider for the ASP.NET Core Identity using CouchDB.NET.
    </PackageDescription>
    <PackageTags>
      aspnetcore;identity;couchdb;dotnet;csharp
    </PackageTags>
    
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/panoukos41/couchdb-identity</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CouchDB.NET" Version="3.0.1" />
    <PackageReference Include="Microsoft.Extensions.Identity.Stores" Version="5.0.3" />
  </ItemGroup>
</Project>